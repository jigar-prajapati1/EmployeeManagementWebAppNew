@model IEnumerable<EmployeeModels.ViewModel.EmployeeDetailView>
@if (TempData["Success"] != null)
{
    <h2>@TempData["Success"]</h2>
}
@{
    ViewBag.Title = "GetAll";
}
<h2>GetAll</h2>
<p>
    @Html.ActionLink("Create New", "AddEmployee")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Designation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProfilePicture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        using (Html.BeginForm("DeleteEmployee", "Employee", new { Id = item.Id }))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.ProfilePicture)*@
                    <img src="~/Images/@item.ProfilePicture" height="50" width="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditEmployee", new { id = item.Id }) |
                    @Html.ActionLink("Details", "GetEmployeeById", new { id = item?.Id }) |
                    <input type="submit" value="Delete" onclick="return confirm('Are you sure to delete ')" />
                </td>
            </tr>
        }
    }

</table>
<div class="alert alert-danger">
    <p>@ViewBag.ErrorMessage</p>
</div>